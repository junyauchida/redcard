<h1>マイカードリスト</h1>

<% if current_user == @user %>

<div class="text">
	<%= form_for (@cardlist) do |c| %>
	<p>カードリスト名</p>
	<%= c.text_field :cardlist_name, :class => 'form'  %>
	<%= c.submit '登録' %>
	<% end %>
</div>

	<table class="table table-hover">
		<thead>
			<tr>
				<th></th>
				<th></th>
				<th></th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody class="text">
			<% @cardlists.each do |c| %>
			<tr>
				<td><%= c.cardlist_name %></td>
				<td><span class="glyphicon glyphicon-heart heart1" aria-hidden="true"><%= c.favorites.count %></span></td>
				<td><%= link_to "学習", cardlist_path(c.id) %></td>
				<td><%= link_to "編集", edit_cardlist_path(c.id) %></td>
				<td><%= link_to "削除", cardlist_path(c.id), method: :delete, "data-confirm"=>"本当に削除しますか？" %></td>
			</tr>
			<%end%>
		</tbody>
	</table>

<% else %>

	<table class="table table-hover">
		<thead>
			<tr>
				<th>カードリスト名</th>
				<th></th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @cardlists.each do |c| %>
			<tr>
				<td><%= c.cardlist_name %></td>
				<td><%= link_to "学習", cardlist_path(c.id) %></td>
			</tr>
			<%end%>
		</tbody>
	</table>

<% end %>
