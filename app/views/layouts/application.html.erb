<!DOCTYPE html>
<html>
  <head>
    <title>Cards</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container app">
      <div class="row">

        <!-- サイドバー -->
        <div class="col-md-3 sidebar">
          <% if user_signed_in? %>
          <p>ログイン中　<%= current_user.user_name %>さん</p>
          <p><%= link_to "ログアウト", destroy_user_session_path, method: :delete, :class => 'navbar-link' %></p>
          <br>

          <p><%= link_to user_path(current_user.id), class: 'btn btn-default btn-lg' do %>
            <i class="fa fa-arrow-left"></i>
            <span class="glyphicon glyphicon-home" aria-hidden="true"> マイページ</span>
          <% end %>
          </p>

          <p><%= link_to cardlists_index_path(current_user.id), class: 'btn btn-default btn-lg' do %>
            <i class="fa fa-arrow-left"></i>
            <span class="glyphicon glyphicon-tags" aria-hidden="true"> マイカードリスト</span>
          <% end %>
          </p>

          <p><%= link_to cardlists_index_all_users_path, class: 'btn btn-default btn-lg' do %>
            <i class="fa fa-arrow-left"></i>
            <span class="glyphicon glyphicon-tags" aria-hidden="true"> みんなのカードリスト</span>
          <% end %>
          </p>

          <P>
          <%= link_to users_path, class: 'btn btn-default btn-lg' do %>
            <i class="fa fa-arrow-left"></i>
            <span class="glyphicon glyphicon-user" aria-hidden="true"> ユーザー</span>
          <% end %>
          </P>

          <% else %>
          <p><%= link_to 'ログイン', users_path %></p>
          <p><%= link_to '新規登録', new_user_registration_path %></p>
          <% end %>
        </div>

<!-- メイン -->
        <div class="col-md-9">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>

</html>
